            <div class="flex gap-x-4 mb-2 md:mb-0">
              <span class="my-auto">Chapter. <%= chapter.number %></span>
              <span class="my-auto"><%= chapter.caption %></span>
            </div>
            <div class="ml-auto flex gap-x-1">
              <% if true %>
                <%= link_to 'サンプルをみる', book_chapter_path(@book, chapter), class: "bg-blue-800 hover:bg-blue-900 rounded-md text-white px-4 py-1" %>
              <% else %>
                <%= link_to '閲覧', book_chapter_path(@book, chapter), class: "bg-blue-800 hover:bg-blue-900 rounded-md text-white px-4 py-1" %>
                <%= link_to '編集', edit_book_chapter_path(@book, chapter), class: "bg-green-500 hover:bg-green-600 rounded-md text-white px-4 py-1" %>
                <% if chapter.number == @book.chapters.length %>
                <%# 公開していない、という条件も追加 %>
