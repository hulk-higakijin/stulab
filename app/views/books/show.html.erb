<%= render 'layouts/header' %>
<section>
  <div class="bg-blue-900 text-white">
    <div class="max-w-4xl mx-auto flex">
      <div class="w-2/3 p-6 flex flex-col">
        <div class="text-sm py-1">
          <span class="cursor-pointer hover:underline">Stulab</span>
          <span class="px-1">></span>
          <span class="cursor-pointer hover:underline"><%= link_to '本一覧', books_path %></span>
        </div>
        <h1 class="text-2xl font-bold"><%= @book.title %></h1>
        <p class="py-4 text-lg tracking-tighter"><%= @book.introduction %></p>
        <div class="flex text-sm gap-x-1 py-2">
          <p class="bg-white text-gray-500 px-2 rounded-full">その他</p>
          <p class="bg-white text-gray-500 px-2 rounded-full">その他</p>
        </div>
        <div class="flex mt-auto">
          <div>
            <div class="flex py-2">
              <i class="text-yellow-500 not-italic">
                ★★★★★
              </i>
              <span class="px-2">5</span>
            </div>
            <p class="text-sm">最終更新 <%= @book.updated_at.strftime('%Y/%m') %></p>
          </div>
          <div class="flex ml-auto gap-x-2">
            <img
              src="https://pbs.twimg.com/profile_images/1388720052862525444/6Ge2RLYf_400x400.jpg"
              class="h-10 w-10 rounded-full object-cover my-auto"
            >
            <p class="my-auto">higakijin</p>
          </div>
        </div>
      </div>
      <div class="w-1/3 bg-white rounded-xl my-6 p-4 flex flex-col gap-y-2 h-full">
        <img
          src="https://pbs.twimg.com/media/FQdhcm_XEAQy00u?format=jpg&name=medium"
          class="w-full min-h-16 object-cover"
        >
        <div class="flex text-black">
          <p class="mt-auto">価格</p>
          <p class="font-semibold ml-auto text-2xl">¥<%= @book.price %></p>
        </div>
        <button class="text-blue-700 border border-blue-700 rounded-lg w-full hover:bg-blue-700 hover:text-white">購入する</button>
        <hr class="my-2">
        <div class="flex text-black">
          <p class="mt-auto">月額</p>
          <p class="font-semibold ml-auto text-2xl">¥2,980</p>
        </div>
        <button class="bg-blue-700 rounded-lg w-full hover:bg-indigo-500">Stulab Extreamへ</button>
      </div>
    </div>
  </div>
</section>

<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    
    <p>Chapters</p>
    <ol class="list-decimal">
      <% @book.chapters.each do |chapter| %>
        <li>
          <%= link_to chapter.caption, book_chapter_path(@book, chapter) %>
          <%= link_to '編集', edit_book_chapter_path(@book, chapter) %>
          <%= button_to '削除', book_chapter_path(@book, chapter), method: :delete if chapter.number == @book.chapters.length %>
        </li>
      <% end %>
    </ol>
    <%= link_to 'チャプターを作成', new_book_chapter_path(@book), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"  %>
    <%= link_to 'Edit this book', edit_book_path(@book), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this book', book_path(@book), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to books', books_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>