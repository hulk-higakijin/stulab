<section class="bg-gray-50 w-screen h-screen flex">
  <div class="border border-gray-300 m-auto bg-white p-12" style="min-width: 28em;">
    <span class="font-semibold text-3xl">Stulab</span>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
      <div class="flex mt-6">
        <div class="bg-blue-50 flex rounded-l-sm border-y-2 border-l-2 border-gray-200">
          <%= render "svg/email" %>
        </div>
        <%= f.email_field :email, autofocus: true,  placeholder: t('activerecord.attributes.user.email'), required: true, class: "bg-gray-100 border-r-2 border-gray-200 rounded-r-sm w-full focus:ring-1" %>
      </div>
      <div class="flex mt-6">
        <%= f.submit t('.send_me_reset_password_instructions'), class: "bg-black text-white w-full py-4 text-center text-sm rounded-md cursor-pointer hover:bg-gray-700" %>
      </div>
      <div class="text-center p-8 text-xs">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</section>


