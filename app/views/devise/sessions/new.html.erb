<section class="bg-gray-50 w-screen h-screen flex">
  <div class="border border-gray-300 m-auto bg-white p-12">
    <span class="font-semibold text-3xl">Stulab</span>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="flex mt-6">
        <div class="bg-blue-50 flex rounded-l-sm border-y-2 border-l-2 border-gray-200">
          <%= render "svg/email" %>
        </div>
        <%= f.email_field :email, autofocus: true, placeholder: t('activerecord.attributes.user.email'), class: "bg-gray-100 border-r-2 border-gray-200 rounded-r-sm w-full focus:ring-0" %>
      </div>

      <div class="flex mt-6">
        <div class="bg-blue-50 flex rounded-l-sm border-y-2 border-l-2 border-gray-200">
          <%= render "svg/password" %>
        </div>
        <%= f.password_field :password, placeholder: t('activerecord.attributes.user.password'), class: "bg-gray-100 border-2 border-gray-200 rounded-r-sm w-full focus:ring-0" %>
      </div>

      <div class="text-xs p-8 text-center">
        <%= render "devise/shared/links" %>
      </div>
      <%= f.submit t('.sign_in'), class: "bg-black text-white w-full py-4 text-center text-sm rounded-md cursor-pointer hover:bg-gray-700" %>
    <% end %>
  </div>
</section>