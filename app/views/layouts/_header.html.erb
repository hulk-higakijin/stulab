<section>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" rel="stylesheet">
  <div class="w-screen flex flex-row items-center p-1 justify-between bg-white shadow-xs">
    <%= link_to 'Stulab', root_path, class: "ml-8 text-lg text-gray-700 hidden md:flex" %>
    <span class="w-screen md:w-1/3 h-10 bg-gray-200 cursor-pointer border border-gray-300 text-sm rounded-full flex">
      <input type="search" name="serch" placeholder="Search" class="flex-grow px-4 rounded-l-full rounded-r-full text-sm focus:outline-none">
      <i class="fas fa-search m-3 mr-5 text-lg text-gray-700 w-4 h-4"></i>
    </span>
    <div class="flex flex-row-reverse mr-4 ml-4 md:hidden">
      <i class="fas fa-bars"></i>
    </div >
    <div class="flex mr-8 hidden md:flex">
      <% if user_signed_in? %>
        <% if current_user.author? %>
          <%= link_to '執筆する', new_book_path, class: "text-white text-center bg-green-500 hover:bg-green-600 px-4 py-2 m-2" %>
        <% end %>
        <%= link_to 'マイページ', "#", class: "text-white bg-blue-500 hover:bg-blue-600 text-center px-4 py-2 m-2" %>
        <div class="text-gray-700 text-center bg-gray-400 px-4 py-2 m-2">Button</div>
        <div class="text-gray-700 text-center bg-gray-400 px-4 py-2 m-2">Link</div>
        <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-gray-700 text-center bg-gray-200 hover:bg-gray-300 px-4 py-2 m-2" %>
      <% else %>
        <%= link_to '新規登録', new_user_registration_path, class: "text-gray-700 text-center bg-gray-400 px-4 py-2 m-2" %>
        <%= link_to 'ログイン', new_user_session_path, class: "text-gray-700 text-center bg-gray-400 px-4 py-2 m-2" %>
      <% end %>
    </div>
  </div>
  <hr>
</section>